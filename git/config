# allow for someone else to use this config file with their own username
[include]
    path = .git/user.config
    path = .git/github.config

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[core]
    editor = vim
    pager = less -FRSX
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.git/ignore
    autocrlf = input

[commit]
  gpgsign = true

[rebase]
    instructionFormat = %s [%an]

[pull]
  rebase = false

[diff]
	compactionHeuristic = true
	rename = copy
	check = true

[push]
	default = simple

[help]
	autocorrect = 1

[alias]
    co = checkout
    c = commit
    ca = commit -a
    a = add
    b = branch
    s = status
    cp = cherry-pick
    ra = rebase --abort
    rc = rebase --continue
    pr = push -u origin HEAD
    pu = push 
    p = pull
    f = fetch
    mm = merge master

    es-worktree = "!f() { git worktree add --track -b $1 $HOME/code/elastic/elasticsearch-$1 upstream/$1; }; f"

    # scripts
    rev = "!f() { git fetch upstream pull/$1/head:review/$1; }; f"
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
    cleanup = "!bash ~/.dotfiles/scripts/git-prune-branches"
    sync-remotes = "!f() { git co master ; git fetch ; git remote prune origin; }; f"

    api = !sh -c 'export TOKEN=`cat ~/.elastic/github.token` && curl -s -H \"Authorization: token $TOKEN\" https://api.github.com$1' -

    grog = "log --graph --abbrev-commit --decorate --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\""
